<table>
<tr>
	<td style="padding:10px 50px 10px 30px" width="300">
		What: <strong style="padding-left:10px;"><a href="<%= event.has_parent? ? event_url(event.parent) : event_url(event) %>"><%= event.title %></a></strong>
		<% if user.in?(event) && event.starts_at.present? && event.starts_at > Time.now.in_time_zone(user.city.timezone) %>
			<strong>  (.in)</strong>
		<% elsif user.in?(event) && event.starts_at.present? && event.starts_at < Time.now.in_time_zone(user.city.timezone) %>
			<strong>  (already over)</strong>
		<% elsif user.invited?(event) %>
			<strong> 	(.invited)</strong>
		<% end %>
		<% if event.starts_at.present? %>
			<br>
			When: <strong style="padding-left:10px;"><%= event.starts_at.strftime("%l:%M%P, %A %B %e") %></strong>
			<% if event.tipped? %>
				<br>
				<strong style="color:green;">Idea tipped!</strong>
			<% else %>
				<br>
				<strong>This idea needs <span style="color:red;"><%= event.min - event.guest_count %></span> to tip</strong>
			<% end %>
		<% end %>
	<% if event.description.present? %>
	<br>
		Details: <span style="padding-left:5px; font-size:12px;"><%= event.description %></a></span>
	<% end %>
	<% if @event.require_payment? && @user.in?(@event) %>
	<br>
		Cost*: <%= @event.nice_price %> <strong style="color:green;"> (Paid)</strong>
	<% elsif @event.require_payment? && !@user.in?(@event) %>
	<br>
		Cost*: <%= @event.nice_price %>
	<% elsif !@event.require_payment && @event.price.present? %>
	<br>
		Cost: <%= @event.nice_price %>
	<% end %>

	</td>
	<td><a href="<%= event_url(@event)%>"><img src="<%= @event.image(:medium) %>" width="100"/></a></td>
</tr>




