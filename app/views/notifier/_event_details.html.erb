<tr>
	<td style="padding:10px 0 5px 50px">What: <strong style="padding-left:10px;"><a href="<%= event_url(event) %>"><%= event.title %></a></strong>
		<% if user.in?(event) && event.starts_at.present? && event.starts_at > Time.now.in_time_zone(user.city.timezone) %>
			<strong>  (.in)</strong>
		<% elsif user.in?(event) && event.starts_at.present? && event.starts_at < Time.now.in_time_zone(user.city.timezone) %>
			<strong>  (already over)</strong>
		<% elsif user.invited?(event) %>
			<strong> 	(.invited)</strong>
		<% end %></td>
</tr>

<% if event.description.present? %>
<tr>
	<td style="padding:10px 0 5px 50px">Details: <span style="padding-left:5px; font-size:12px;"><%= event.description %></a></span></td>
</tr>
<% end %>

<% if event.starts_at.present? %>
<tr>
	<td style="padding:5px 0 5px 50px">When: <strong style="padding-left:10px;"><%= event.starts_at.strftime("%l:%M%P, %A %B %e") %></strong></td>
</tr>
	<% if event.tipped? %>
		<tr>
			<td style="padding:5px 0 20px 50px"><strong style="color:green;">Idea tipped!</strong></td>
		</tr>
	<% else %>
		<tr>
			<td style="padding:5px 0 5px 50px"><strong>This idea needs <span style="color:red;"><%= event.min - event.guest_count %></span> to tip</strong></td>
		</tr>
	<% end %>
<% end %>

<% if @event.require_payment? && @user.in?(@event) %>
	<tr>
		<td style="padding:5px 0 5px 50px">Cost*: <%= @event.nice_price %> <strong style="color:green;"> (Paid)</strong></td>
	</tr>
<% elsif @event.require_payment? && !@user.in?(@event) %>
	<tr>
		<td style="padding:5px 0 5px 50px">Cost*: <%= @event.nice_price %></td>
	</tr>
<% elsif !@event.require_payment && @event.price.present? %>
	<tr>
		<td style="padding:5px 0 5px 50px">Cost: <%= @event.nice_price %></td>
	</tr>
<% end %>



