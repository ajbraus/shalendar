<tr>
	<td style="padding:10px 0 5px 50px">What: <strong style="padding-left:10px;"><a href="http://www.hoos.in/events/<%= event.id %>"><%= event.title %></a></strong>
		<% if user.rsvpd?(event) && event.starts_at > Time.now.in_time_zone(user.time_zone) %>
			<strong>  (Attending)</strong>
		<% elsif user.rsvpd?(event) && event.starts_at < Time.now.in_time_zone(user.time_zone) %>
			<strong>  (Attended)</strong>
		<% end %></td>
</tr>

<tr>
	<td style="padding:5px 0 5px 50px">When: <strong style="padding-left:10px;"><%= event.starts_at.strftime("%l:%M%P, %A %B %e") %></strong></td>
</tr>

<% if @event.require_payment? && @user.rsvpd?(@event) %>
	<tr>
		<td style="padding:5px 0 5px 50px">Cost*: <%= @event.nice_price %> <strong style="color:green;"> (Paid)</strong></td>
	</tr>
<% elsif @event.require_payment? && !@user.rsvpd?(@event) %>
	<tr>
		<td style="padding:5px 0 5px 50px">Cost*: <%= @event.nice_price %></td>
	</tr>
<% elsif !@event.require_payment && @event.price.present? %>
	<tr>
		<td style="padding:5px 0 5px 50px">Cost: <%= @event.nice_price %></td>
	</tr>
<% end %>

<% if false #event.tipped? %>
<tr>
	<td style="padding:5px 0 20px 50px"><strong style="color:green;">Idea tipped!</strong></td>
</tr>



<tr>
	<td style="padding:5px 0 5px 50px"><strong>This idea needs <span style="color:red;"><%= event.min - event.guests.count %></span> to tip</strong></td>
</tr>

<% end %>


