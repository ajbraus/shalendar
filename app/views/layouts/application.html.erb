<!DOCTYPE html>
<html>
  <head>
    <title>hoos.in<%= yield(:title) %></title>
    <link rel="shortcut icon" href="/favicon.ico" />
        <!-- JS FOR EVENT LOCATION MAP -->
    <% if false %>
      <%= javascript_include_tag "http://maps.google.com/maps/api/js?sensor=false" %>
      <%= javascript_include_tag "http://xilinus.com/jquery-addresspicker/src/jquery.ui.addresspicker.js" %>
    <% end %>
    
    <%= stylesheet_link_tag    "application", media: "all" %>
    <%= javascript_include_tag "application" %>

    
    <%= csrf_meta_tags %>
    <meta property="fb:app_id" content="327936950625049"
    <meta property="og:title" content="hoos.in"/>
    <meta property="og:site_name" content="hoos.in"/>
    <meta property="og:type" content="website"/>
    <meta property="og:image" content="http://hoos.in/assets/icon.png"/>

    <%= render 'layouts/shim' %>  

    <script type="text/javascript">
      var user_id = <%= current_user %>;
    </script>

    <%= render 'layouts/google_analytics' %>

  </head>
  <body>
    <div id="loading" style="display:none;"><%= image_tag('ajax-loader.gif') %></div>
    <%= render 'layouts/fb_script' %>  

    <header class="header">
      <%= render 'layouts/header' %>
      <%= render 'layouts/alerts' %>
    </header>
    <div class="layout"> 
      <%= yield %>
    </div>
      <%= render 'layouts/footer' %>
      <% if user_signed_in? %>
        <div id='feedback'><a href="mailto:info@hoos.in" target="_blank"> Feedback</a></div>
      <% end %>
    </div>
    <%= yield :scripts %>
  </body>
</html>