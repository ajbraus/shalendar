<div class="navbar">
  <div class="navbar-inner clearfix">
    <div class="col-sm-4">
      <%= render 'layouts/logo' %>
    <% if user_signed_in? %>
      <div class="city_name pull-left" id="cityName">
        <%= @current_city.name %> <%= link_to "move", pick_city_path, id:"editCity", style:"display:none;" %>
      </div>
    </div>
    <div class="col-sm-4 pull-right">
      <%= render 'shared/friend_search' %>
      <% if current_user.admin? %>
        <%= link_to admin_dashboard_path, style:"position: relative;bottom: 7px;" do %>
          <span class="fadeInRed"><i class="icon-magic"></i></span>
        <% end %>
      <% end %>
    <% end %>
    </div>
    <div class="visible-lg visible-md visible-sm hidden-xs pull-right">
      <div class="iphone-android">
        <%= image_tag "email/iphone_store.png", width:130 %>
        <%= image_tag "email/android_store.png", width:130 %>
      </div>
    </div>
  </div>
</div>
<div class="hidden-lg hidden-md hidden-sm visible-xs white-background">
  <div class="text-center iphone-android">
    <%= image_tag "email/iphone_store.png", width:90 %>
    <%= image_tag "email/android_store.png", width:90 %>
  </div>
</div>
