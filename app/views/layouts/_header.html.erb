<header class="header">
<nav>
  <%= render 'layouts/logo' %>

<% if user_signed_in? %>
  <ul class="left_header">
    <% unless current_user.vendor? %> <!-- ALL USERS EXCEPT VENDORS -->
      <li id="view_search" class="user_search">
        <%= form_tag({:controller => 'shalendar', :action => 'search'}, {id: 'search_form', remote: true }) do %>
          <%= text_field_tag :search, params[:search], id: "user_search_field", placeholder:"Search For Friends", autocomplete: "off" %>
          <input type="submit" id="btn_user_search" class="fa-input btn-user-search" value="&#xf002;" title="Search for Friends">
        <% end %> 
      </li>
      <div class="get_friends">
        <% if session[:access_token] %>
          <%= link_to find_friends_path, :remote => true, class: "find_friends fancybox.ajax" do %>
            <%= image_tag "social/fb.png", :width => "20", title: "Find Friends on Facebook" %>
          <% end %>
        <% else %>
          <div class="fb_button" title="Add Facebook to Find More Friends">
            <div id="auth-status">
              <a href="#" id="auth-loginlink" class="fb-login-button" ><%= image_tag "social/fb.png", :width => "30" %></a>
              </div>
          </div><br>
        <% end %>
      </div>
    <% end %>

            <% if false %>
              <li class="get_friends">
                <div class="city-icon">
              <%= link_to city_vendors_path, :remote => true, class:"city_vendors fancybox.ajax" do %>
                <%= (image_tag "madison-icon.jpeg", :wdith => "20", title: "Friend Public Profiles in Madison") %>
              <% end %>
                </div>
              </li>
            <% end %>
  </ul>
  <ul class="browse_dropdowns">
    <li>
      <%= render 'shared/city_user_dropdown' %>
    </li>
    <li>
      <div id="interestsDropdown">interests <i class="icon-sort-down"></i></div>
      <%= render 'shared/intersts_user_dropdown' %>
    </li>
  </ul>

  <ul class="right_header">
       <li>
      <dl class="dropdown">
        <dt><a href="#"><%= raster_profile_picture(current_user) %></a></dt>
        <dd>
          <ul>
            <li class="settings">
              <%= link_to edit_user_registration_path do %>
                <span class="fadeInOrange"><i class='icon-wrench user_settings'></i>settings</span>
              <% end %>
            </li>
            <li class="settings">
              <%= link_to destroy_user_session_path, :method => :delete do %>
                <span class="fadeInRed"><i class='icon-signout logout'></i>logout</span>
              <% end %>
            </li>
          </ul>
        </dd>
      </dl>
    </li>
    <li>
      <%= link_to activity_path do %>
        <span class="fadeInOrange"><i class="icon-dashboard"></i> <span id="headerText"> my plans</span>
      <% end %>
    </li>
    <li>
      <%= link_to new_invited_events_path, :remote => true do %>
        <span class="fadeInBlue"><i class="icon-cloud"></i><span id="headerText">new ideas</span></span>
        <% unless current_user.new_invited_events_count == 0 %>
          <span id="new_invited_events_count" class="new_invited_events_count"><%= current_user.new_invited_events_count %></span>
        <% end %>
      <% end %>
    </li>
      <span id="invitations"></span>
    <% if current_user.admin? %>
    <li>
      <%= link_to admin_dashboard_path do %>
        <span class="fadeInRed"><i class="icon-magic"></i></span>
      <% end %>
    </li>
    <% end %>
    <li>
      <a href="<%= manage_friends_path %>"> 
        <span class="fadeInGreen"><strong id="header_friend_count" class="friend_count"><%= current_user.followers.count %></strong>  <i class="icon-group"></i><span id="headerText">friends</span></span>
        <% if current_user.reverse_relationships.where('relationships.confirmed = false').any? %>
        <% @friend_requests = current_user.reverse_relationships.where('relationships.confirmed = false') %>
          <span class="new_friends_count"><%= @friend_requests.count %></span>
        <% end %>
      </a>
    </li>
</ul>

<% else %> <!-- IF NOT SIGNED IN -->
  <ul class="browse">
    <li><%= render 'shared/city_session_dropdown' %>
  </ul>
  <ul class="right_header">
    <li>
      <%= link_to "login", new_user_session_path %>
    </li>
    <li>

    </li>
  </ul>
<% end %>
</nav>
</header>