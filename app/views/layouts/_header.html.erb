<nav class="header_nav">
  <ul>
    <% if user_signed_in? %>
      <% @view_requests = Relationship.where("relationships.followed_id = :current_user_id AND
                                          relationships.confirmed = false ", current_user_id: current_user.id) %>
      <% if @view_requests.any? %>
        <li><a href="<%= manage_follows_path %>"><strong id="view_requests"><u> + </u><%= @view_requests.count %> Requests</strong></a></li>
      <% end %>
      <li><a href="<%= root_path %>">ideas <strong><%= current_user.events.count %></strong></a></li>
      <li><a href="<%= manage_follows_path %>">viewing  <strong><%= current_user.followed_users.count %></strong></a></li>
      <li><a href="<%= manage_follows_path %>">viewed by  <strong><%= current_user.followers.count %></strong><span class="ceiling">/300</span></a></li>
      <li><%= current_user.name %></li>
      <li><dl class="dropdown">
          <dt><a href="#"><%= raster_profile_picture(current_user) %></a></dt>
          <dd>
            <ul>
              <% if user_signed_in? %>
                <li>
                  <%= link_to destroy_user_session_path, :method => :delete do %>
                    <span class="fadeInRed"><i class='icon-signout logout'></i>logout</span>
                  <% end %>
                </li>
                <li>
                  <%= link_to edit_user_registration_path do %>
                    <span class="fadeInOrange"><i class='icon-wrench user_settings'></i>settings</span>
                  <% end %>
                </li>
                <% else %>
                <li>
                  <%= link_icon("Login", new_user_session_path,"signin","","") %>
                </li>
              <% end %>
            </ul>
          </dd>
        </dl></li>
    <% end %>
  </ul>
