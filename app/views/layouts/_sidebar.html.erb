<% if user_signed_in? %>
<div class="sidebar part" id="sidebar">
  <%= render partial: 'layouts/stats' %>
  <div class="label">You have <%= @my_plans.count %> plans</div>
  <% if @my_plans.present? %>
    <% @my_plans.each do |mp| %>
      <%= render partial: 'shalendar/mini_event', locals: { :event => mp } %>
    <% end %>
  <% end %>
</div>
<% else %>
<div class="sidebar part" id="sidebar">
  <div class="not_signed_in_pitch">
    hoos.in is for finding and planning creative adventurous things with your friends.
    <%= link_to "login", new_user_session_path, class:"btn btn-success" %>
    <%= link_to "sign up", root_path, class:"btn btn-success" %>
  </div>
</div>
<% end %>