<div class="sidebar part" id="sidebar">
  <% if user_signed_in? %>
    <%= render partial: 'layouts/stats' %>
</div>
<%= render 'shared/interests_user_dropdown' %>
<div class="upcoming_ideas part">
    <div class="label"><%= @my_plans.count %> upcoming .ins</div>
    <% if @my_plans.present? %>
      <% @my_plans.each do |mp| %>
        <%= render partial: 'shalendar/mini_event', locals: { :event => mp } %>
      <% end %>
    <% end %>
  <% else %>
    <%= render 'shared/not_signed_in_pitch' %>
  <% end %>
</div>