<% provide(:title, " | Home") %>
<div class="container">
	<aside>

	  <div class="profile_pic_home"><%= medium_profile_picture(@current_user) %></div>
	  <%= current_user.name %>

	  <%= render 'stats' %>
  
	  <%= render 'search' %>

	  <span class="grey_italics" style="font-size:14px;">Click pics to show/hide user's ideas</span>

	  <%= render 'raster' %>
	  
	  <% if session[:access_token] %>
		<a href="#find_friends", class="find_friends"><%= (image_tag "social/fb.png", :size => "50x50", title: "Find Friend's On Facebook") %></a>
		<br>
    <% else %>
	  	<div class="social_friends">
	   		<div class="fb_button">
      		<div id="auth-status">
          	<a href="#" id="auth-loginlink" class="fb-login-button"><%= image_tag "social/fb.png", :size => "50x30", title: "Add Facebook Authentication and Find More Friends" %></a>
     		  </div>
    		</div><br>
	  	</div>
	  	Add Facebook Authentication
	  <% end %>
	</aside>

	<%= render 'ribbon' %>
	<%= render 'forecast' %>
</div>
	<% if session[:access_token] != nil %>
		<%= render 'find_friends' %>
	<% end %>