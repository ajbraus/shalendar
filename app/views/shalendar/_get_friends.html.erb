<div class="part get_friends">
	<div id="view_search">
		<%= form_tag({:controller => 'shalendar', :action => 'search'}, {id: 'search_form', remote: true }) do %>
		  <%= text_field_tag :search, params[:search], id: "user_search_field", class: "search_spinner", placeholder:"Full Name or Email", autocomplete: "off" %>
		  <input type="submit" id="btn_user_search" class="btn-success fa-input btn-user-search" value="&#xf002; Friends" title="Search for Friends">
		<% end %> 
	</div>
	<div class="friends-icons">
		<div class="city-icon">
			<a href="#public", class="public" ><%= (image_tag "madison-icon.jpeg", :size => "50x50", title: "Friend Public Profiles in Madison") %></a>
		</div>

		<%= render :partial => 'public' %>
		
		<div>
		<% if session[:access_token] %>
			<%= link_to find_friends_path, :remote => true, class: "find_friends fancybox.ajax" do %>
				<%= image_tag "social/fb.png", :size => "50x50", title: "Find Friends on Facebook" %>
			<% end %>
		<% else %>
			<div class="fb_button" title="Add Facebook to Find More Friends">
				<div id="auth-status">
		    	<a href="#" id="auth-loginlink" class="fb-login-button" ><%= image_tag "social/fb.png", :size => "50x50" %></a>
				  </div>
			</div><br>
		<% end %>
		</div>
	</div>
</div>