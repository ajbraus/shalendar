<div id='datepicker'>
  <%= render partial: 'shalendar/datepicker' %>
</div>

<div id='yt'><a href='#<%= Time.now.to_date %>' id='todayButton' class='btn-today'>Today</a></div>

<div class="home" id="scrollContainer">
<% for i in -3..26 %>
	<div class="each_day clearfix">		
		<div class="date_bar marker clearfix shield <% if i == 0 %> red <% end %>" <% if i == 0 %> id="today" <% end %> data-date=<%= "#{Time.now.to_date + i}" %>>
      <div class="date"><%= (Time.now.to_date + (i)).strftime("%A %b %e") %></div>
<!--       <div class="friend_only hide_all" title="Only Show My Plans">
      	<span class="fadeInBlue"><i class="icon-ok-sign"></i> <span class="only">only</span>
      </div> -->
<!--       <div class="friend_only hide_public" title=".invites only">
      	<span class="fadeInOrange"><i class="icon-envelope-alt"></i> <span class="only">only</span></span>
      </div> -->
		</div>
    <div class="day_container clearfix">
  		<div class="idea_container clearfix">
        <% if @ideas[i + 3].any? %>
  				<% @ideas[i + 3].each do |e| %>
  					<%= render :partial => "shalendar/event", :locals => { :event => e } %>
  				<% end %>
  			<% end %>
  		</div>
    </div>
	</div>
<% end %>
</div>