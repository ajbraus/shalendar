<div class="mini_calendar">
	<h2 style="color:white;">my calendar</h2>
	<% if @times.blank? %>
		<div class="mini_calendar_explanation">
			<div clas="text">
				Click <span class="btn_icon btn_icon_rsvp">.interested</span> on an idea to stay .informed about its upcoming times and to make new <b>.in-mates</b>
				<br>
				<br>
				<div>Click an .in-mate's ring to add them to your .inner-circle </div>
				<div class="explainer_arrows">
					<i class="icon-circle-blank inmate_star"></i> <i class="icon-arrow-right"></i> <i class="icon-circle-blank friend_star"></i>
				</div>
				<br>
				Click on <%= render 'shared/new_idea_button' %> to create a new idea
			</div>
		</div>
	<% else %>
		<% for i in 0..90 %>
			<div class="each_day clearfix">		
				<div class="date_bar marker clearfix <% if i == 0 %> orange <% end %>" <% if i == 0 %> id="today" <% end %>>
					<%= (Time.zone.now.to_date + (i)).strftime("%A %b %e") %>
				</div>
				<div class="day_container clearfix" data-date="<%= Time.zone.now.to_date + i %>">
				</div>
			</div>
		<% end %>
	<% end %>
</div>
<%= render partial: 'shalendar/mini_event', collection: @times, as: :event %>