<div id="view_requests">
	<% @view_requests.each do |vr| %>
	<table>
		<tr>
			<td width="50px"><%= link_to raster_profile_picture(vr.follower) %></td>
			<td width="200px"><%= vr.follower.name %></td>
			<td width="20px"><%= link_to raw("<i class='icon-remove-sign'></i>"), relationship_remove_path(vr), method: :delete %></td>
			<td width="20px"><%= link_to raw("<i class='icon-check'></i>"), relationship_confirm_path(vr), method: :put %></td>
			<% unless current_user.following?(vr.follower) ||
								current_user.request_following?(vr.follower) %>
				<td width="20px"><%= link_to "Confirm and follow back",
				relationship_confirm_and_follow_path(vr), method: :put %></td>
			<% end %>
		</tr>
	</table>
	<% end %>
</div>
