<div id="ribbon">
	<a class="btn-primary btn_new_idea" href="#new_idea">New Idea</a>
	<%= render 'new_idea_form' %>
	<%= render 'next_plan', event: @next_plan %>

	<div id="datepicker">
		<% for i in -3..16 do %>
		<a href="/home?date=<%= Date.today + i %>">
		<table>
			<tr>
				<th>
					<%= i == 0 ? "Today" : (Date.today + i).strftime("%a").slice!(0..1) %>
		  	</th>
		  </tr>
		  <tr>
		  	<td>
		  		<%= ideas_on_date_count(i) %>
		  	</td>
		  </tr>
		  	<td>
		  		<%= plans_on_date_count(i) %>
		  	</td>
		  </tr>
		</table>
		</a>
		<% end %>
	</div>
</div>