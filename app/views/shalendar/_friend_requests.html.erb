<% @friend_requests.each do |vr| %>
<table class="friend_requests part" data-user-id="<%= vr.follower.id %>">
	<tr>
		<td width="50px"><%= link_to raster_profile_picture(vr.follower) %></td>
		<td width="200px"><%= vr.follower.name %></td>
		<td width="20px"><%= link_to raw("<i class='icon-remove-sign'></i>"), relationship_remove_path(vr), title: "Ignore", method: :delete, class:"tooltip", remote: true %></td>
		<td width="20px"><%= link_to raw("<i class='icon-check'></i>"), relationship_confirm_and_follow_path(vr), title: "Confirm", method: :put, class:"tooltip", remote: true %></td>
	</tr>
</table>
<% end %>

<% javascript_include_tag "littletip-1.4.js" %>
