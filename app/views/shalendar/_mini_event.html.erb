<div class="mini_event <%= event.ends_at < Time.now ? 'over' : ''%>" >
	<%= link_to event do %>
		<div class="event_time">			
			<span><%= event.mini_start_date_time %> (<%= event.nice_duration %> hr)</span>
		</div>
		<div class="event_blerb">
			<%= link_to user_path(event.user), target: "blank" do %>
				<span title="Created by: <%= event.user.name %>">
					<%= raster_profile_picture(event.user) %>
				</span>
			<% end %>
			<span class="title"><%= event.title %></span>
			<div class="inviter">
				<% unless User.find_by_id(event.inviter_id).blank? || User.find_by_id(event.inviter_id) == current_user %>
					<%= link_to user_path(User.find_by_id(event.inviter_id)), target: "blank" do %>
						<%= User.find_by_id(event.inviter_id).name %>
					<% end %>
				<% end %>
			</div>
		</div>
		<% if event.has_image? %>
			<div class="promo_img">
			<% if event.parent.blank? %>
				<% if !event.promo_url.blank? %>
					<%= image_tag("#{event.promo_url}") %>
				<% elsif event.promo_img.url(:medium) != "/promo_imgs/medium/missing.png" %>
					<%= image_tag("#{event.promo_img.url(:medium)}") %>
				<% end %>
			<% else %>
				<% if !event.parent.promo_url.blank? %>
					<%= image_tag("#{event.parent.promo_url}") %>
				<% elsif event.parent.promo_img.url(:medium) != "/promo_imgs/medium/missing.png" %>
					<%= image_tag("#{event.parent.promo_img.url(:medium)}") %>
				<% end %>
			<% end %>
			</div>
		<% end %>

			<div class="guest_count">
			<% if event.tipped? %>	
				<span class="count" id="guestCount"><%= event.guests.count %></span>
			<% else %>
				<span id="guestCount" class="count red"><%= event.guests.count%><span id="eventMin">/<%= event.min %></span></span>
			<% end %>
		</div>
<% end %>	
</div>
