<% if user_signed_in? %>
<div class="mini_event 
	<%= current_user.in?(event) ? 'in' : 'invite' %>" 
	data-event-id='<%= event.id %>'
	<%= event.starts_at.present? ? "data-date=#{event.starts_at.to_date}" : '' %>>
<% else %>
<div class="mini_event">
<% end %>
<%= link_to event do %>
	<div class="rsvp_check">
		<%= render :partial => "shalendar/rsvp_check", :locals => { :event => event } %>
	</div>
	<div class="event_time">			
		<%= event.mini_start_time %> (<%= event.nice_duration %> hr)
	</div>
	<%= render :partial => 'shared/guest_count', :locals => { :event => event } %>
	<div class="event_blerb">
		<%= event.title %>
		<div class="inviter">

		</div>
	</div>
	<% if event.has_image? %>
		<div class="promo_img">
			<%= image_tag event.image(:medium) %>
		</div>
	<% end %>

<% end %>	
</div>
