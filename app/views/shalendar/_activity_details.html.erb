<div class="guests_groups">
	<div class="activity_guests">
		<% if event.rsvps.any? %>
			<h4>Guests <%= event.guest_count %></h4>
			<% event.guests.each do |g| %>
				<table>
					<tr>
						<td>
							<%= link_to user_path(g) do %>
								<%= raster_profile_picture(g) %> 
							<% end %>
						</td>
						<td>
							<%= link_to user_path(g) do %>
								<%= g.name %>
							<% end %>
						</td>
					<tr>
				</table>
			<% end %>
		<% end %>
	</div>
	<% if false %>
<div class="groups">
	<% if event.instances.any? %>
		<h4>Groups</h4>
			<% event.instances.each do |i| %>
				<table>
					<tr>
						<td><%= i.start_time %></td>
						<td><%= i.guest_count %></td>
					</tr>
				</table>
			<% end %>
	<% end %>
</div>
<% end %>