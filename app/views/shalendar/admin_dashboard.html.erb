<h1> Admin Dashboard </h1>
<h2> <%= Date.today %></h2>

<h1>
	Users
</h1>

<dl>
<dt> 
	New Users Last Week: <strong><%= @new_users_last_week %></strong>
</dt>
<dd>
	User.where(['created_at > ?', Time.now.in_time_zone(current_user.time_zone) - 1.week])
</dd> 

<dt>
	Users per week since inception
</dt>
<dd>
	<%= high_chart("users_per_week", @users_per_week_graph) %>
</dd>

<dt>
 Total Users: <strong><%= @total_users %></strong>
</dt>
<dd>

</dd>
<dt> 
	Active Users: <strong><%= @active_users %></strong>
</dt>
<dd>
	User.where(['last_sign_in_at > ? AND sign_in_count > 10', Time.now.in_time_zone(current_user.time_zone) - 1.month])
</dd>

<dt>
	Inactive users: <strong><%= @inactive_users.count %></strong>
</dt>
<dd>
	User.where(['last_sign_in_at < ?', Time.now.in_time_zone(current_user.time_zone) - 1.month])
	<% if false %>
	<ul>
		<% @inactive_users.each do |iau| %>
			<li><%= iau.name %>, <%= iau.email %>, <%= iau.created_at.strftime("%A, %b %e") %></li>
		<% end %>
	</ul>
	<% end %>
</dd>
</dl>
