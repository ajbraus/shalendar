<div id="forecast">
	<% for i in -3..16 %>
	<dl class="day" data-date=<%= "#{@time_in_zone.to_date + i}" %>>
		<% if @time_in_zone.to_date + (i) == @time_in_zone.to_date %>
			<dt class="forecastDate red"><%= (@time_in_zone.to_date + (i)).strftime("%A %b %e") %></dt>
		<% else %>
			<dt class="forecastDate"><%= (@time_in_zone.to_date + (i)).strftime("%A %b %e") %></dt>
		<% end %>
		<div class="today"></div>
		<% if user_signed_in? %>
			<% @forecastevents[i + 3].each do |event| %>
				<dd>
					<%= render :partial => "shalendar/event", :locals => { :event => event } %>
				</dd>
			<% end %>
		<% end %>
		<% if @public_events[i + 3].any? %>
			<dt>
				<div class="idea_type community_ideas">Community Ideas</div>
				<div class="idea_type_line"></div>
			</dt>
				<% @public_events[i + 3].each do |pe| %>
			<dd>
				<%= render :partial => "shalendar/event", :locals => { :suggestion => pe } %>
			</dd>
			<% end %>
		<% end %>
	</dl>
	<% end %>
</div>
