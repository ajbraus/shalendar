<% if user_signed_in? %>
	<% if event.ends_at.present? && event.ends_at < Time.zone.now %>
		<div class="btn-over"></div>
	<% elsif current_user.in?(event) %>
		<span class="status_icon">
			<% if user_signed_in? %>
				<% if current_user.in?(event) %>
					<i class="icon-ok-sign blue"></i> you're .in
				<% end %>
			<% end %>
		</span>
	<% else %>
		<% if !current_user.rsvpd?(event) %>	
			<%= form_for(current_user.rsvps.build(plan_id: event.id), remote: true) do |f| %>
				<%= f.hidden_field :plan_id %>
			  <%= f.hidden_field :inout, value: "0" %>
			  <div>
			  	<span class="out out_check"><i class='icon-remove'></i></span> 
			 		<button class="btn btn-danger out_text" style="display:none;" name="commit" type="submit">
						out
			  	</button>
			  </div>
			<% end %>	
			<%= form_for(current_user.rsvps.build(plan_id: event.id), remote: true) do |f| %>
			  <%= f.hidden_field :plan_id %>
			  <%= f.hidden_field :inout, value: "1" %>
			  <%= f.submit "#{ event.starts_at.blank? || event.one_time? ? '.interested' : '.in'}", class:"btn_icon btn_icon_rsvp", title: "I'm interested" %>
			<% end %>	
		<% end %>
	<% end %>
<% end %>