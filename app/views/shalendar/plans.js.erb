$('#plans').html("<%= escape_javascript(render partial: 'shalendar/plans') %>");

$('body').click(function() {
	$('.upcoming_ideas').hide();
});

$('.upcoming_ideas').click(function(event){
     event.stopPropagation();
 });

$('.upcoming_ideas').children().click(function(event){
     event.stopPropagation();
 });

$("a[href$='plans']").click(function(event){
     event.stopPropagation();
 });

$("a[href$='plans']").click(function(e) {
		e.preventDefault();
		$('.upcoming_ideas').toggle();
	});