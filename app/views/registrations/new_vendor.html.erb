<% provide(:title, " | Venue") %> 
<div id="sign_up" class="sign_up">
  <h2> Venue Sign Up </h2>
  <%= form_for(resource, 
        :as => resource_name, 
        :url => registration_path(resource_name),
        :html => { multipart: true, id: "registration_form" }) do |f| %>
  <%= devise_error_messages! %>
  
  <div><%= f.label :name, "Name*" %><br />
  <%= f.text_field :name, class: "required", placeholder:"name" %></div>

  <div><%= f.label :email, "Email*" %><br />
  <%= f.email_field :email, class: "required", placeholder:"email@example.com" %></div>

  <div><%= f.label :profile_picture, "Profile Picture*" %><br />
  <%= f.file_field :avatar, class: "required" %></div>

  <div><%= f.label :background_image, "Background Image (1024x600)" %><br />
  <%= f.file_field :background %></div>

  <div><%= f.label :city, "City*" %><br />
  <%= f.select :city, @cities, class: "required" %></div>

  <div><%= f.label :time_zone, "Time Zone*" %><br />
  <%= f.time_zone_select :time_zone, ActiveSupport::TimeZone.us_zones, :default => "Central Time (US & Canada)", class: "required" %></div>

  <div><%= f.label :password, "Password*" %><br />
  <%= f.password_field :password, class: "required" %></div>

  <div><%= f.label :password_confirmation, "Retype Password*" %><br />
  <%= f.password_field :password_confirmation, class: "required" %></div>

  <div><%= f.check_box :terms, checked: true %><%= f.label :terms, "Vendor Terms & Conditions*", class: "required" %></div><br/>

  <%= f.hidden_field :vendor, value: true %>

  <div><%= f.submit "Sign up", :class => "btn btn-large btn-primary" %></div>
<% end %>
</div>