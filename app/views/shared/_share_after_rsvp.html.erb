<div class="share_after_rsvp part">
	<div id="close" class="fadeInRed"><i class="icon-remove"></i></div>
	<h1><strong>You're .in</strong></h1>
	<h1><strong>what:</strong> <%= event.title %></h1>
	<% if event.starts_at.present? %>
	<h1><strong>when:</strong> <%= start_time(event) %></h1>
    <h3>add to your google calendar
    <div class="calendars">
      <div>
        <a href="http://www.google.com/calendar/event?action=TEMPLATE&text=<%= url_encode(@event.title) %>&dates=<%= @event.url_starts_at %>/<%= @event.url_ends_at %>&details=<%= url_encode(@event.description) + " - " + event_url(@event) %>&location=<%= url_encode(@event.address) %>&trp=true&sprop=www.hoos.in%2Fideas%2F<%= @event.id %>&sprop=name:<%= url_encode(@event.title) %>" target="_blank" title="Add to Your Google Calendar">
          <%= image_tag("gcalendar.png", width: '30') %>
        </a>
      </div>
      <% if false %>
      <div>
        <%= link_to event_path(event), :format => :ics do %>
          <%= image_tag "ical-icon.png", width: '30', title: "Add to Your Calendar" %>
        <% end %>
      </div>
      <% end %>
    </div>
  <% end %>

	<% if (current_user == event.user || (event.guests_can_invite_friends? || event.is_public?)) && event.is_parent_or_future_instance? %>
	  <div class="social_sharing">
	  <h3>.invite your friends</h3> 
	    <div>
	      <%= render partial: 'social/hoosin', locals: { :event => @event } %>
	    </div>
	    <div>
	      <%= render partial: 'social/email', locals: { :event => @event } %>
	    </div>
	    <div>
	      <%= render partial: 'social/facebook', locals: { :event => @event } %>
	    </div>
	    <div>
	      <%= render partial: 'social/twitter', locals: { :event => @event } %>
	    </div>
	    <div>
	      <%= render partial: 'social/pinterest', locals: { :event => @event } %>
	    </div>
	  </div>
  <% end %>
<% if false %>
  <% if @event.guests_can_invite_friends? || @event.user == current_user && @event.is_parent_or_future_instance? %>
    <div id="invite_raster" class="part clearfix">
      <%= render partial: 'events/invite_raster', :locals => { :event => @event } %>
    </div>
  <% end %>
<% end %>

</div>