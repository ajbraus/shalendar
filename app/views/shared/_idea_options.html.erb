<div id="eventOptions">
		<div id="dateTime" style="display:none;">
		  <div class="starts_at">
		    <%= label :starts_at, "When does it start?*" %>
		    <%= f.text_field :chronic_starts_at, id: "datetime", class: "starts_at required", autocomplete: "off" %>
		  </div>
		  <div class="duration">
		    <%= label :duration, "How Long?*" %>
		    <%= f.text_field :duration, placeholder:"hrs", autocomplete: "off", class:"required"  %>
		  </div>
		</div>

		<div id="addtippingp" class="minmax" style="display:none;">
			<div class='tippingIcon'>
		  	<i class="icon-tasks"></i>
			</div>
		  <u>
		    <%= f.label :min_attendees, "Tipping Point" %> <br/>
		    <%= f.text_field :min, :class => 'input-mini', autocomplete: "off" %>
		  </u>
		  <u>
		    <%= f.label :max_attendees, "Limit" %> <br/>
		    <%= f.text_field :max, :class => 'input-mini', autocomplete: "off" %>
		  </u>
		</div>

<% if false %>
		<div class="venue_invitation_options" id="visibilityp" style="display:none;">
		  <u>
		  	<%= f.label :is_public, ".invite #{@current_city.name.split(",")[0].to_s.capitalize}" %><span title="Make this a City-Wide idea"> (?)</span><br>
				<i class="icon-bullhorn questionMark"></i>
				<span id="isPublic"><%= f.check_box :is_public, class: "switch" %></span>
			</u>
		  <u>
		  	<%= f.label nil, "allow friends to .invite" %><span title="people can .invite friends to this idea"> (?)</span><br>
				<i class="icon-plus questionMark"></i>
				<%= f.check_box :guests_can_invite_friends, class: "switch", checked: "checked" %>
			</u>
			<div class="idea_categories" id="addcategoriesp" style="display:none;">
				<%= label :category, "Category*" %>
		    <div id="categories">
		    	<%= collection_select :category, :category_id, Category.all, :id, :name, { :prompt => true } %>
	    	</div>
	    	<div class="family_friendly_checkbox">
	    		<%= f.label "Family Friendly?" %><br>
					<i class="icon-home questionMark"></i>
					<%= f.check_box :family_friendly, class: "switch" %>
		  	</div> 
	  	</div> 
		</div>
<% end %>

<% if false %>
		<div class="invitation_options" id="visibilityp">
		  <u>
				<%= f.label nil, ".invite all friends" %><span title=".invite all your hoos.in friends"> (?)</span><br>
				<i class="icon-group questionMark"></i>
				<input id="invite_all_friends" name="invite_all_friends" type="checkbox" class="switch">    			
			</u>
		  <u>
		  	<%= f.label nil, "open .invite" %><span title="anyone can .invite friends"> (?)</span><br>
				<i class="icon-plus questionMark"></i>
				<%= f.check_box :guests_can_invite_friends, class: "switch", checked: "checked" %>
			</u>
		</div>
<% end %>

	<div id="addimgp" style="display:none;">
	  <div><%= f.label :display_image %></div>
	 	  <i class="icon-link"></i><%= f.text_field :promo_url, autocomplete: "off", placeholder: "Image URL" %><br>
	  or<br>
	  	<i class="icon-camera-retro"></i><%= f.file_field :promo_img %>
	</div>
	
	<div id="addvidp" style="display:none;">
		<div><%= f.label :event_video %></div>
		<i class="icon-facetime-video"></i><%= f.text_field :promo_vid, autocomplete: "off", placeholder: "You Tube URL" %>
	</div>

	<div id="addmapp" style="display: none;">
	  <%= label_tag "Location" %><br/>
	  <i class="icon-map-marker"></i><%= f.text_field :address, autocomplete: "off" %>
	</div>

	<div id="addLinkp" style="display: none;">
		<%= label_tag "Link" %></br>
		<i class="icon-link"></i> <%= f.text_field :link, autocomplete: "off" %>
	</div>

	<div id="addcostp" style="display:none;">
    <%= f.label "Cost" %><br>
    <i class="icon-money"></i><div class="dollar">$</div><%= f.text_field :price, :class => 'input-mini', autocomplete: "off", placeholder: "0.00" %>
    <% if false %>
    	<% if current_user.bank_account_uri %>
    		<%= f.check_box :require_payment %> <%= f.label "Require Payment to Join" %>
    	<% else %>
    		<%= link_to "Enable ticketing and payments", new_merchant_path, target: "_blank" %>
    	<% end %>
    <% end %>
	</div> 
</div>

<div>
	<ul>
 		<!-- <li id="visibility" title=".invite"><i class="icon-group"></i></li> -->
 		<li id="addimg" title="Add an Image"><i class="icon-camera-retro"></i></li>
 		<li id="addvid" title="Add a video"><i class="icon-facetime-video"></i></li>
	  <li id="addLink" title="Add a Link"><i class="icon-link"></i></li>
	  <li id="addcost" title="Add an Cost"><i class="icon-money"></i></li>
	  <li id="addmap" title="Add a Location"><i class="icon-map-marker"></i></li>
		<li id="addtipping" title="Add a Tipping Point"><i class="icon-tasks"></i></li>
		<li id="addDateTime" title="Add Date and Time"><i class="icon-time"></i></li>
	</ul>
</div>