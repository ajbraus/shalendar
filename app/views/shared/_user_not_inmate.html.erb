<div class="user">
  <div class="friend_button">
    <% if current_user.is_friends_with?(user) %>
      <i class="icon-circle-blank" style="color:gold;position: relative; top: 9px;"></i>
    <% elsif current_user.is_inmates_with?(user) %>
      <i class="icon-circle-blank" style="color:lightgrey; position: relative; top: 9px;"></i>
    <% end %>
  </div>
  <div class="pic">
    <%= link_to user_path(user) do %>
      <%= image_tag("#{invite_raster_picture(user)}", class: "profile_picture") %>
    <% end %>
  </div>
  <div class="friend_name">
    <%= link_to user_path(user) do %>
      <%= user.name %>
    <% end %>
  </div>
</div>