<div class="user clearfix">
  <div class="friend_button follow_form_hook" data-user-id='<%= user.id %>'>
      <%= render  :partial => 'events/follow_form', :locals => { :user => user } %>
  </div>
  <div class="pic">
    <%= link_to root_path(id: user.id) do %>
      <%= image_tag("#{invite_raster_picture(user)}", class: "img-circle very_small_profile_picture") %>
    <% end %>
  </div>
  <div class="friend_name">
    <%= link_to root_path(id: user.id) do %>
        <%= user.name %>
    <% end %>
  </div>
</div>