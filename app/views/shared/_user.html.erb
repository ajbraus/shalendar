<div class="user">
  <div class="pic">
    <%= link_to user_path(user) do %>
      <%= image_tag("#{invite_raster_picture(user)}", class: "profile_picture") %>
    <% end %>
  </div>
  <div class="friend_name">
    <%= user.name %>
  </div>
  <div class="friend_button">
    <%= render  :partial => 'events/just_follow_form', :locals => { :user => user } %>
  </div>
</div>