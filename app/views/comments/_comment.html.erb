<%= div_for comment do %>
  <div class="comment_picture">
  	<%= link_to root_path(id: comment.user.id) do %>
  		<%= small_profile_picture(comment.user) %>
  	<% end %>
  </div>
  <div class="comment_content">
		<%= auto_link(comment.content) %>
  </div>
  <div class="comment_data">
  	<span class="comment_created_at"> by <%= comment.user.first_name_with_last_initial %> <%= time_ago_in_words(comment.created_at) %> ago</span>
		<% if current_user == comment.user %>
			<%= link_to event_comment_path(@event, comment), :method => :delete, id:"delete_comment" do %>
				<i class="icon-remove"></i>
			<% end %>
		<% end %>
	</div>
<% end %>