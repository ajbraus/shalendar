if ($("a").withPicId(<%= @relationship.follower.id %>).hasClass("toggled-off")) {
	$('div').withInviterId(<%= @relationship.follower.id %>).fadeIn("slow");
	$("a").withPicId(<%= @relationship.follower.id %>).removeClass("toggled-off").addClass("toggled-on");
}
else {
	$('div').withInviterId(<%= @relationship.follower.id %>).fadeOut("slow");
	$("a").withPicId(<%= @relationship.follower.id %>).removeClass("toggled-on").addClass("toggled-off");
}
