<div id="backgroundImg" class="background-img" style="z-index: -1;position: fixed;background: url(<%= @user.background.url(:original) %>);-webkit-background-size: cover;-moz-background-size: cover;-o-background-size: cover;background-size: cover;width: 100%;height: 100%;left: 0;top: 0;"></div>
<div class="left user_show">
	<div class="profile clearfix">
		<%= large_profile_picture(@user) %>
		<div class="show_name"><%= @user.name %><br><span style="font-size:14px;position:relative;bottom:20px;"><%= @user.city.name %></span></div>
		<% unless current_user == @user %>
			<div class="show_friend">
				<%= render  :partial => 'events/follow_form', :locals => { :user => @user } %>
			</div>
		<% end %>
		<div class="profile_stats">
			<ul>
				<li><span class="only"> created </span> <%= @user.events.count %></li>
				<li><span class="only"> .ins </span> <%= @user.plans.count %></li>
				<li><span class="only"> stars </span> <%= @user.friends.count %></li>
				<li><span class="only"> .in-mates </span> <%= @user.inmates.count %></li>
			</ul>
		</div>
		<% if @user == current_user %>
	    <div class="settings">
	      <%= link_to destroy_user_session_path, :method => :delete do %>
	        <span class="fadeInRed"><i class='icon-signout logout'></i>logout</span>
	      <% end %>
	      <%= link_to edit_user_registration_path do %>
	        <span class="fadeInOrange"><i class='icon-wrench user_settings'></i>settings</span>
	      <% end %>
	    </div>
	  <% end %>
	</div>

	<h2><%= @user.first_name %>'s .ins</h2>
	<div class="idea_container">
		<%= render partial: 'shalendar/event', collection: @my_ins, as: :event %>
	</div>

	<% if user_signed_in? %>
		<% if (current_user == @user || current_user.is_inmates_or_friends_with?(@user)) %>
			<div class="future_events">
			<h3>Upcoming Ideas</h3>
				<ul>
					<%= render partial: 'shalendar/activity_event', collection: @times, as: :event %>
				</ul>
			</div>

			<div class="past_events">
				<h3>Past Ideas</h3>
				<ul>
					<%= render partial: 'shalendar/activity_event', collection: @past_times, as: :event %>
				</ul>
			</div>
		<% end %>
	<% end %>
	</div>	
	
	<div class="inmates_bar right">
		<h2><%= @user.inmates.count + @user.friends.count %> .in-mates</h2>
		<%= render partial: 'shared/user', collection: @user.friends, as: :user %>
		<%= render partial: 'shared/user', collection: @user.inmates, as: :user %>
	</div>
