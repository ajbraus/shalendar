<% if user_signed_in? %>
	<% if event.ends_at.present? && event.ends_at < Time.zone.now %>
		<div class="btn-over"></div>
	<% elsif current_user.in?(event) %>
		<span class="status_icon">
			<% if user_signed_in? %>
				<% if current_user.in?(event) %>
					<i class="icon-ok blue"></i> <%= event.starts_at.blank? || event.one_time? ? '.interested' : '.in' %>
				<% end %>
			<% end %>
		</span>
	<% else %>
		<% if !current_user.rsvpd?(event) %>	
			<%= form_for(current_user.rsvps.build(plan_id: event.id), remote: true) do |f| %>
				<%= f.hidden_field :plan_id %>
			  <%= f.hidden_field :inout, value: "0" %>
			 		<button class="out" name="commit" type="submit">
						<i class='icon-remove'></i></span> 
			  	</button>
			<% end %>	
			<%= form_for(current_user.rsvps.build(plan_id: event.id), remote: true) do |f| %>
			  <%= f.hidden_field :plan_id %>
			  <%= f.hidden_field :inout, value: "1" %>
			 		<button class="in_check fadeInBlue" name="commit" type="submit">
						<i class='icon-ok'></i>
			  	</button>
			<% end %>	
		<% end %>
	<% end %>
<% end %>