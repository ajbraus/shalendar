<% if !current_user.rsvpd?(event) %>	
	<%= form_for(current_user.rsvps.build(rsvpable_id: event.id, rsvpable_type: "Event"), remote: true) do |f| %>
		<%= f.hidden_field :rsvpable_id %>
		<%= f.hidden_field :rsvpable_type %>
	 		<button class="out" name="commit" type="submit">
				<i class='icon-remove'></i></span>out
	  	</button>
	<% end %>	
	<%= form_for(current_user.rsvps.build(rsvpable_id: event.id, rsvpable_type: "Event"), remote: true) do |f| %>
	  <%= f.hidden_field :rsvpable_id %>
	  <%= f.hidden_field :rsvpable_type %>
	 		<button class="in_check fadeInBlue" name="commit" type="submit">
				<i class='icon-ok'></i><%= event.starts_at.blank? ? '.interested' : '.in' %>
	  	</button>
	<% end %>	
<% else %>
	<% if current_user.in?(event) %>
		<span class="status_icon">
			<i class="icon-ok blue"></i> .interested
		</span>
	<% else %>
		<span class="status_icon">
			<i class="icon-remove red"></i> out
		</span>	
	<% end %>
<% end %>