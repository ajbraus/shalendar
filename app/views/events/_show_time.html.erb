	<div class="when one_time clearfix instance" data-event-id="<%= event.id %>">	
    <div id="rsvpForm" class="join_group_buttons">
      <%= render :partial => "events/rsvp_form", :locals => { :event => event } %>
    </div>
    <div class="date"><%= event_start_time(event) %> <%= date(event) %> ( <%= event.nice_duration %> <% if event.ends_at < Time.now %> - Over <% end %> ) </div>
    <ul id="calendars">
      <li>
        <a href="http://www.google.com/calendar/event?action=TEMPLATE&text=<%= url_encode(event.title) %>&dates=<%= event.url_starts_at %>/<%= event.url_ends_at %>&details=<%= url_encode(event.description) + " - " + event_url(event) %>&location=<%= url_encode(event.address) %>&trp=true&sprop=www.hoos.in%2Fideas%2F<%= event.id %>&sprop=name:<%= url_encode(event.title) %>" target="_blank" title="Add to Your Google Calendar">
          <%= image_tag("gcalendar.png", width: '30') %>
        </a>
      </li>
      <li>
        <%= link_to event_path(event, :format => :ics) do %>
          <%= image_tag "ical-icon.png", width: '30', title: "Add to Your iCal or Outlook" %>
        <% end %>
      </li>
    </ul>
      <% if user_signed_in? %>
        <% if current_user == event.user || current_user == event.parent.user %>
          <ul class="time_settings">
            <li>
              <%= link_to event_edit_time_path(event), class: "fadeInOrange" do %>
                <i class="icon-cogs"></i>
              <% end %>
            </li>
          </ul>
        <% end %>
      <% end %>

    <div class="show_facepile">
      <span id="guestCount"><%= event.guest_count %></span>
      <% event.guests.each do |guest| %>
        <%= link_to user_path(guest) do %>
          <span title="<%= guest.name %>"><%= raster_profile_picture(guest) %></span>
        <% end %>
      <% end %>
    </div>
	</div>