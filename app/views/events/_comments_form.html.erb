<div class="comments_form part">
	<%= form_for([@event, @event.comments.build]) do |f| %>
	  <div class="field">
	    <%= f.label :content, "Leave a Comment" %><br />
	    <%= f.text_area :content, rows: 3, cols: 35 %>
	  </div>
	  <div class="checkbox">
	  	<%= label_tag :contact, "Email RSVPs?" %><br />
	    <%= check_box_tag :contact %>
	  </div>

	  <p><%= f.submit "Leave Comment", class: "btn btn-primary" %></p>
	<% end %>

	<div id="comments">
	  <%= render :partial => 'comments/comment', collection: @comments %>
	</div>
</div>