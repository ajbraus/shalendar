<% friends.each do |f| %>
  <div class="event_show_friend friend">
  	<%= image_tag("#{invite_raster_picture(f)}", class: "profile_picture") %>
			<div id="friend_name"><%= f.name %></div>
			<div id="friend_button" style="display:none;">
				<%= form_for f.invitations.build(invited_event_id: event.id, inviter_id: current_user.id, invited_user_id: f.id), remote: true do |i|%>
					<%= i.hidden_field :inviter_id %>
					<%= i.hidden_field :invited_event_id %>
					<%= i.hidden_field :invited_user_id %>
					<%= i.submit "Invite", class:"btn btn-success invite_button" %>
				<% end %>
			</div>
 	</div>
<% end %>