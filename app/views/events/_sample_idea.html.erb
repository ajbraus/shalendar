<div class="sample_title">Idea Cover</div>

<div class="event shield" id="sampleEvent">
	<div class="event_blerb">
		<% if false %><span class="blerb_pic" title="Created by: <%= current_user.name %>"><%= raster_profile_picture(current_user) %></span><% end %>
		<span class="title eventTitle"><%= @parent ? @parent.title : '' %></span>
	</div>
	<div class="meter">
		<span style="width: 100%;"><span></span></span>
	</div>

	<div class="promo_img" id="eventPromoImg">
  	<% if @parent  && @parent.has_image? %>
  		<%= image_tag @parent.image(:medium) %>
  	<% end %>
  </div>
	<div class="event_time" <%= @parent ? "" : "style='display:none;'" %>>
		<span class="eventStartsAt"><%= @parent.present? && @parent.starts_at.present? ? start_time(@parent) : raw("<strong>TBD</strong>") %></span>
	</div>
	<div class="shield_bottom">
		<div class="event_shield_icons">
			<span class="status_icon">
				<i class="icon-ok-sign blue" title="you're .in"></i>
			</span>
			<span class="eventIsBigIdea" title="This event needs a crowd!" style="display:none;"><i class='icon-cloud'></i></span>
			<span id="eventVideoIcon" style="display:none;"><i class='icon-facetime-video'></i></span>
	  </div>

	  <div class="guests">
	  	<i class="icon-group"></i> 1 <span id="eventMin"></span>
	  </div>
	</div>
</div>
	<!-- END EVENT SHIELD -->

	<!-- BEGIN EVENT SHOW -->
<div class="sample_title">Idea Page</div>
<div class="event_show clearfix">
  <div class="event_top">
	  <div class="join_group_buttons">
	   	<div class="group_button" style="display:none">
				<a href="#" class="btn btn-success rsvp_button" title= "For City-Wide ideas, in addition to joining, people can make 'child ideas' based on yours called a 'Group'">
					<i class="icon-copy"></i> Make a Group
				</a>
			</div>
			<div id="rsvpForm" class="join_group_buttons">
				<a href="#" class="btn btn-rsvp rsvp_button" title="By clicking here folks will join your ideas">.in</a>
				<a href="#" class="btn rsvp_button btn_stop_viewing ursvp_button" title="Here folks can opt out of this idea">out</a>
			</div>
	  </div>
	  <ul id="calendars">
      <li>
        <%= image_tag "gcalendar.png", width: '30', title:".invites can add this idea to their calendars" %>
      </li>
      <li>
         <%= image_tag "ical-icon.png", width: '30', title:".invites can add this idea to their calendars" %>
      </li>
    </ul>
  </div>
 
	<div class="event_title">
	  <div class="eventTitle"><%= @parent ? @parent.title : '' %></div>
    <div class="eventIcons">
    	<span id="eventCategory"></span>
      <span id="eventPublicIcon" style="display:none;">
      	<i class="icon-bullhorn" title="Public"></i>
      </span>
      <span id="eventFamilyFriendlyIcon" style="display:none;">
      	<i class="icon-home" title="Family Friendly"></i>
      </span>
      <span class="eventIsBigIdea" title="This event needs a crowd!" style="display:none;"><i class='icon-cloud'></i></span>
    </div>
	</div>

	<div class="when">
    <div class="date"><span class="eventStartsAt"><%= @parent.present? ? start_time(@parent) : raw("<strong>TBD</strong>") %></span><span class="eventDuration"></span></div>
    <div class="event_link fadeInOrange" title="Links to a website for the idea">
      <i class="icon-link"></i>
      <span id="eventLink"><%= @parent.present? ? @parent.link : '' %></span>
    </div>
    <div class="event_location fadeInOrange" title="Links to Google Maps">
      <i class="icon-map-marker"></i>
      <span id="eventLocation"><%= @parent.present? ? @parent.address : '' %></span>
    </div>
    <div class="cost">
      <i class="icon-money"></i><span id="eventCost"><%= @parent.present? ? @parent.price : '' %></span>
    </div>
	</div>
	
	<div id="eventDescription" class="event_description"></div>

  <div class="meter"f>
		<span style="width: 100%;"><span></span></span>
	</div>

  <div class="promo_img" id="eventImage">
  	<% if @parent  && @parent.has_image? %>
  		<%= image_tag @parent.image(:large) %>
  	<% end %>
  </div>

  <div class="promo_vid" id="eventVid">
  </div>

<% if false %>
		<% if event.user == current_user && event.tipped? == false && event.tipped? == true %>
			<div class="force_tip">
				<%= link_to raw("&#xf08d;"), tip_path(:event_id => event.id), :confirm => "Tip this idea? This cannot be reversed and will send notifications to all RSVPs.", :method => :put, :title => "Tip this Idea", :class => "fa-input", remote:true, id:"tipPin" %>
			</div>
		<% end %>
	<% unless event.is_public? %>
		<% unless event.user == User.find_by_id(event.inviter_id) %>
			<div class="host">by: <%= event.user.first_name.capitalize %> 
				<% if event.user.last_name %>
					<%= event.user.last_name.capitalize%>
				<% end %> 
			</div>
		<% end %>
	<% end %>
<% end %>