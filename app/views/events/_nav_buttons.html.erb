<div class="nav_buttons">
<!-- IF USER IS CREATOR, ALLOW EDIT -->
  <%= link_to 'Home', home_path, :class => "btn-primary", style:"color:white;" %> 
  <% if @event.user == current_user %> 
      <%= link_to 'Edit', edit_event_path(@event) %>
    <%= link_to @event, method: :delete, data: { confirm: 'This will send an Email to all RSVPs. Are you sure?' } do %>
    <i class="icon-trash icon-large"></i>
    <% end %>
  <% end %>
</div>
