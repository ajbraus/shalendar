<% provide(:title, " | Idea") %>
<% if user_signed_in? %>
  <%= render 'events/event_buttons' %>
<% end %>
<div class="rsvp_button">
    <%= render 'rsvp_form' %>
</div>

<div class="event_show">

  <div class="event_top">
    <div class="host">
	   <%= raster_profile_picture(@event.user) %> 
     <div>
      hosted by: <br><%= @event.user.name %>
     </div>
    </div>
    <% unless @event.address == '' %>
      <div class="event_location">
        <%= link_to "http://mapof.it/#{@event.address}", target: "_blank", title:"View in Google Maps" do %>
          <span class="fadeInOrange"><i class="icon-map-marker"></i></span>
        <% end %>
        <%= @event.address %>
      </div>
    <% end %>
    <div class="cost">
      <%= @event.nice_price %>
    </div>
  </div>

	<div class="when">
	  <%= event_start_time(@event) %> - <%= event_end_time(@event) %>
	  <%= date(@event) %> 
	</div>

  <% if !@event.promo_url.nil? && @event.promo_url != "" %>
    <div class="promo_img">
      <%= image_tag("#{@event.promo_url}") %>
    </div>
  <% elsif !@event.promo_img_file_size.nil? %>
    <div class="promo_img">
      <%= image_tag("#{@event.promo_img.url(:large)}") %>
    </div>
  <% end %>

	<div class="event_title">
	  <%= @event.title %>
	</div>

  <% if !@event.promo_vid.nil? && @event.promo_vid != "" %>
    <div class="promo_vid">
      <%= raw(youtube_embed(@event.promo_vid)) %>
    </div>
  <% end %>

<% if user_signed_in? %>
	<!-- COMMENTS -->
  <%= render partial: 'comments_form' %>
  
  <% if (current_user.rsvpd?(@event) && @event.guests_can_invite_friends? || @event.user == current_user) && @event.ends_at < Time.now %>
      <div id="invite_raster">
        <%= render partial: 'invite_raster', :locals => { :event => @event } %>
      </div>
  <% end %>
<% end %>

    <div class="maybes">
      <div id="invite_count" class="left_label event_label"><%= @fb_friends.nil? ? @invited_users.count + @email_invites.count : @invited_users.count + @email_invites.count + @fb_friends.count %> Maybes </div> 
      <div id="invites" class="show_raster">
        <%= render partial: 'events/invites' %>
      </div>
    </div>

    <div class="guests">
      <% if @event.tipped? %>
        <div class="right_label event_label"><%= @guests.count %> Going (Tipped!)</div>
      <% else %>
        <div class="destroy right_label event_label"><%= @guests.count %> / <%= @event.min %> Going (Not Yet Tipped)</div>
      <% end %>
      <div class="show_raster">
        <%= render 'guests' %>
      </div>
    </div>
  </div>
</div>

<% if false %>
  <div class="shareable">
    <i class="icon-group black" title="Join the Idea and Share with Friends"></i>
  </div>
<% end %>

<!-- Twitter API script -->
<script>!function(d,s,id){var js,fjs=d.getElementsByTagName(s)[0];if(!d.getElementById(id)){js=d.createElement(s);js.id=id;js.src="//platform.twitter.com/widgets.js";fjs.parentNode.insertBefore(js,fjs);}}(document,"script","twitter-wjs");</script>

<!-- FACBEOOK JS SDK (for Like button in event#show) -->
<div id="fb-root"></div>
<script>(function(d, s, id) {
  var js, fjs = d.getElementsByTagName(s)[0];
  if (d.getElementById(id)) return;
  js = d.createElement(s); js.id = id;
  js.src = "//connect.facebook.net/en_US/all.js#xfbml=1&appId=327936950625049";
  fjs.parentNode.insertBefore(js, fjs);
}(document, 'script', 'facebook-jssdk'));</script>

