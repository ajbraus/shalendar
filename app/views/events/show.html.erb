<% provide(:title, " | #{@event.title}" ) %>
<% if @event.has_parent? %>
  <% unless @event.parent.user.background_file_size.nil? %>
      <div id="backgroundImg" class="background-img" style="z-index: -1;position: fixed;background: url(<%= @event.parent.user.background.url(:original) %>);-webkit-background-size: cover;-moz-background-size: cover;-o-background-size: cover;background-size: cover;width: 100%;height: 100%;left: 0;top: 0;"></div>
  <% end %> 
<% else %>
  <% unless @event.user.background_file_size.nil? %>
      <div id="backgroundImg" class="background-img" style="z-index: -1;position: fixed;background: url(<%= @event.user.background.url(:original) %>);-webkit-background-size: cover;-moz-background-size: cover;-o-background-size: cover;background-size: cover;width: 100%;height: 100%;left: 0;top: 0;"></div>
  <% end %>
<% end %>
<%= render 'events/event_buttons' %>
<div class="event_show clearfix">
  <div class="event_top">
    <div class="host friend">
      <%= link_to user_path(@event.user), target: "blank" do %>
        <%= raster_profile_picture(@event.user) %> 
      <% end %>
      <div>hosted by: </div><br>
      <% if !user_signed_in? || (current_user.following?(@event.user) || current_user == @event.user) %>
        <div>
          <%= @event.user.name %>
        </div>
      <% else %>
        <div id="friend_name">
          <%= @event.user.name %>
        </div>
        <div id="friend_button" style="display:none;">
          <%= render  :partial => 'events/just_follow_form', :locals => { :user => @event.user } %>
        </div>
      <% end %>
    </div>

    <% unless @event.link.blank? %>
    <div class="event_link">
      <%= link_to "http://#{@event.link}", target: "_blank" do %>
        <span class="fadeInOrange" title="Idea's Website"><i class="icon-link"></i> <%= @event.link[0..15] %></span>
      <% end %>
    </div>
    <% end %>
    <% unless @event.address == '' || @event.address.nil? %>
      <div class="event_location">
        <%= link_to "http://mapof.it/#{@event.address}", target: "_blank", title:"View in Google Maps" do %>
          <span class="fadeInOrange">
            <i class="icon-map-marker"></i>
            <span style="font-size: 22px;"> <%= @event.address %></span>
          </span>
        <% end %>
      </div>
    <% end %>
    <% if @event.price.present? %>
      <div class="cost">
        <i class="icon-money"></i> <%= @event.nice_price %>
      </div>
    <% end %>
  </div>

	<div class="when">
	  <% if @event.starts_at.present? %>
      <div class="date"><%= event_start_time(@event) %> <%= date(@event) %> ( <%= @event.nice_duration %> hrs 
        <% if @event.ends_at < Time.now %> - Over <% end %> ) </div>
    <% else %>
      <div class="date"><strong>Time TBD </strong></div>
    <% end %>
    <div class="join_group_buttons">
      <%= render 'rsvp_form' %>
    </div>
	</div>
  <!-- METER -->
  <% if @event.tipped? %>  
    <div class="meter">
      <span style="width:100%;"><span></span></span>
    </div>
  <% elsif @event.starts_at.present? %>
    <div class="meter animate orange">
      <span style=<%= 'width:' + "#{(100*@event.guest_count.to_f/@event.min.to_f).round}" + "%;"%>><span></span></span>
    </div>
  <% end %>

  <div class="event_title">
    <div class="eventTitle"><%= @event.title %></div>
      <div class="eventIcons">
      <% if @event.categories.any? %>
        <% @event.categories.each do |cat| %>
          <%= cat.name %>
        <% end %>
      <% end %>
      <% if @event.is_public? %>
        <i class="icon-bullhorn" title="Public"></i>
      <% end %>
      <% if @event.family_friendly? %>
        <i class="icon-home" title="Family Friendly"></i>
      <% end %>
      </div>
  </div>
  <% if @event.description.present? %>
    <div class="event_description"><%= @event.description %></div>
  <% end %>
  
  <% if @event.has_image? %>
    <div class="promo_img">
      <%= image_tag @event.image(:large) %>
    </div>
  <% end %>
  
  <% if @event.promo_vid.present? %>
    <div class="promo_vid">
      <%= raw(youtube_embed(@event.promo_vid)) %>
    </div>
  <% end %>

<% if user_signed_in? %>
	<!-- COMMENTS -->
  <%= render partial: 'comments_form' %>
  <% if @event.starts_at.present? %>
    <% if (@event.guests_can_invite_friends? || @event.user == current_user) && @event.ends_at > Time.now %>
        <div id="invite_raster">
          <%= render partial: 'invite_raster', :locals => { :event => @event } %>
        </div>
    <% end %>
  <% end %>
<% end %>

    <div class="maybes">
      <div class="left_label event_label"><span id="invite_count"><%= @fb_invites.nil? ? @invited_users.count + @email_invites.count : @invited_users.count + @email_invites.count + @fb_invites.count %></span> .invited </div> 
      <div id="invites" class="show_raster">
        <%= render partial: 'events/invites' %>
      </div>
    </div>

    <div class="guests">
      <% if @event.tipped? %>
        <div class="right_label event_label"><%= @guest_count %> .in (Tipped!)</div>
      <% else %>
        <div class="destroy right_label event_label"><%= @guest_count %> / <%= @event.min %> .in (Not Yet Tipped)</div>
      <% end %>
      <div class="show_raster">
        <%= render 'guests' %>
      </div>
    </div>
  </div>
</div>

