<% provide(:title, " | #{@event.title}" ) %>
<% if @event.is_public? && @event.user.background_file_size != nil %>
  <div id="backgroundImg" class="background-img" style="z-index: -1;position: fixed;background: url(<%= @event.user.background.url(:original) %>);-webkit-background-size: cover;-moz-background-size: cover;-o-background-size: cover;background-size: cover;width: 100%;height: 100%;left: 0;top: 0;"></div>
<% end %>
<% if user_signed_in? %>
  <%= render 'events/event_buttons' %>
<% end %>
<div class="event_show">
  <div class="event_top">
    <div class="host">
	   <%= raster_profile_picture(@event.user) %> 
     <div>
      hosted by: <br><%= @event.user.name %>
     </div>
    </div>
    <% unless @event.link == '' %>
    <div class="event_link">
      <%= link_to "http://#{@event.link}", target: "_blank" do %>
        <span class="fadeInOrange" title="Idea's Website"><i class="icon-link"></i></span> link
      <% end %>
    </div>
    <% end %>
    <% unless @event.address == '' || @event.address.nil? %>
      <div class="event_location">
        <%= link_to "http://mapof.it/#{@event.address}", target: "_blank", title:"View in Google Maps" do %>
          <span class="fadeInOrange"><i class="icon-map-marker"></i></span>
        <% end %>
        <%= @event.address %>
      </div>
    <% end %>
    <div class="cost">
      <%= @event.nice_price %>
    </div>
  </div>

	<div class="when">
	  <%= event_start_time(@event) %> <%= date(@event) %> - <%= @event.nice_duration %> hrs
      <div class="join_group_buttons">
        <%= render 'rsvp_form' %>
      </div>
	</div>

  <% if @event.has_image? %>
    <div class="promo_img">
      <%= image_tag("#{@event.image(:large)}") %>
    </div>
  <% end %>

	<div class="event_title">
	  <%= @event.title %>
      <div class="eventIcons">
      <% if @event.has_category? %>
        <%= @event.category.capitalize %> | 
      <% end %>
      <% if @event.is_public? %>
        <i class="icon-bullhorn" title="Public"></i>
      <% end %>
      <% if @event.family_friendly? %>
        <i class="icon-home" title="Family Friendly"></i>
      <% end %>
      <% if @event.guests_can_invite_friends? %>
        <i class="icon-plus" title="Guest can Share with Friends"></i>
      <% end %>
      </div>
	</div>

  <% if !@event.promo_vid.nil? && @event.promo_vid != "" %>
    <div class="promo_vid">
      <%= raw(youtube_embed(@event.promo_vid)) %>
    </div>
  <% end %>

<% if user_signed_in? %>
	<!-- COMMENTS -->
  <%= render partial: 'comments_form' %>
  <% if ((current_user.rsvpd?(@event) && @event.guests_can_invite_friends?) || @event.user == current_user) && @event.ends_at > Time.now %>
      <div id="invite_raster">
        <%= render partial: 'invite_raster', :locals => { :event => @event } %>
      </div>
  <% end %>
<% end %>

    <div class="maybes">
      <div class="left_label event_label"><span id="invite_count"><%= @fb_friends.nil? ? @invited_users.count + @email_invites.count : @invited_users.count + @email_invites.count + @fb_friends.count %></span> Maybes </div> 
      <div id="invites" class="show_raster">
        <%= render partial: 'events/invites' %>
      </div>
    </div>

    <div class="guests">
      <% if @event.tipped? %>
        <div class="right_label event_label"><%= @guests.count %> Going (Tipped!)</div>
      <% else %>
        <div class="destroy right_label event_label"><%= @guests.count %> / <%= @event.min %> Going (Not Yet Tipped)</div>
      <% end %>
      <div class="show_raster">
        <%= render 'guests' %>
      </div>
    </div>
  </div>
</div>

<% if false %>
  <div class="shareable">
    <i class="icon-group black" title="Join and Share with Friends"></i>
  </div>
<% end %>

