<% provide(:title, " | Idea") %>
<div class="dashboard">
  <%= render 'layouts/logo' %>

  <% if @event.visibility == "friends_of_friends" || @event.user == current_user %>
    <div id="invites_form">
        <%= form_for([@event, @event.invites.build]) do |f| %>
            <%= f.text_field :email, placeholder: "Invite by Email Address" %>
            <%= f.submit raw("&#xf0e0;"), class: "btn btn-primary fa-input" %>
        <% end %>
    </div>
    <%= render partial: 'invite_raster', locals: { :event => @event } %>
  <% end %>
</div>

<div class="container event_show"> 
  <% if @event.tipped? %>
    <div class="event_on typed_text">happening</div>
  <% else %>
    <div class="not_tipped typed_text">Needs <%= @event.min - @guests.count %> to Tip</div>
  <% end %>
  <%= render 'title' %>
  <%= render 'nav_buttons' %>
  <%= render 'social' %>
  <%= render 'guests' %>
  <% if @event.address.length > 0 %>
    <%= render 'map' %>
  <% end %>
  <% if @event.link.length > 0 %>
    <div class="event_link part">
      Link: <%= event_link(@event) %>
    </div>
  <% end %>
  <%= render partial: 'comments_form' %>
</div>

