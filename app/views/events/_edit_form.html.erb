<% provide(:title, " | Edit Event") %>
<aside>
  <%= render 'layouts/logo_and_user' %>
</aside>

<div id="event_form">
  <%= form_for(@event) do |f| %>
    <% if @event.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@event.errors.count, "error") %> prohibited this event from being saved:</h2>

        <ul>
        <% @event.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class="field">
      <%= f.label :idea %><br/>
      <%= f.text_field :title, :placeholder => "What's going on?" %>
    </div>

    <div class="field" id="address">
      <%= f.label :map%><br/>
      <%= f.text_field :location, :id => 'addresspicker_map', :class =>"ui-autocomplete-input", :placeholder => "Search Address" %>
    
    <div id="map"></div>
    </div>
    <div class="field">
     Starts at<br/>
     <%= f.text_field :chronic_starts_at, value: "#{start_time(@event)}" %><br/>

     Duration<br/>
     <%= f.text_field :chronic_ends_at, :placeholder => "7pm? tommorrow at noon? next thursday at 5 in the morning?" %>
    </div>
    <div class="field">
      <h4>Visibility (in Degrees of Separation)</h4>
      <%= radio_button_tag :visibility, 'friends_of_friends' %>
      <%= label :friends_of_friends, "2&deg;" %>
      <%= radio_button_tag :visibility, 'friends', :checked => true %>
      <%= label :friends, "1&deg;" %>
      <%= radio_button_tag :visibility, 'invite_only' %>
      <%= label :invite_only, 'Invite only' %>
    </div>
    <div class="field">
      <span>
        <%= f.label :min_attendees %> <br/>
        <%= f.text_field :min, :class => 'input-mini', :value => "1" %>
      </span>
      <span>
        <%= f.label :max_attendees %> <br/>
        <%= f.text_field :max, :class => 'input-mini', :value => "10000" %>
      </span>
    </div>
    <div class="actions"> 
      <%= f.submit :class => 'btn btn-large btn-warning' %>
    </div>
  <% end %>
</div>