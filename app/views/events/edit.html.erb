<% provide(:title, " | Edit") %>
<div class="new_crowd_idea clearfix">
  <div class="event_form">
    <%= form_for @event, url: { :controller => 'events', :action => 'update' }, html: { id: "new_event_form" } do |f| %>
    <p>   
      <div class="title_char_counter"><span id="titleCharCount">0</span>/60</div>
      <%= label :title, "Idea*" %><br/>
      <%= f.text_field :title, id: "new_idea_title", class: "required", autocomplete: "off" %>
    </p>
    <p>
      <%= label :description, "The deets" %><br/>
      <%= f.text_area :description, id: "new_idea_description", rows: 2, autocomplete: "off", onkeypress: "if(event.keyCode==13){return false;}" %>
    </p> 

  <%= render partial: 'shared/idea_options', locals: { :f => f } %>
       
    <%= f.submit 'Update Idea', :class => 'btn btn-large btn-primary', method: :post %>
    
    <div style="margin-top: 17px;">
      <%= link_to event_new_time_path(@event), id:"makeATime", class:"btn btn-large btn-success rsvp_button" do %>
        <i class="icon-copy"></i> New Time
      <% end %>
    </div>
    <div style="margin-top: 17px;">
      <%= link_to @event, method: :delete, data: { confirm: 'Are you sure? This will notify all guests that the idea is canceled.' }, class: "btn btn-large btn-danger" do %>
        <i class="icon-trash"></i> Cancel
      <% end %>
    </div>
  <% end %>
  </div>
  <!-- PREVIEW -->
  <div class="idea_preview">
    <%= render partial: 'sample_idea' %>
  </div>
</div>