<div class="event_form">
 <%= form_for @event, html: { id: "new_event_form" } do |f| %>
  <% if @event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@event.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

	  <p>
<%= label :title, "Idea" %><br/>
<%= f.text_area :title, id: "new_idea_title", :rows => 2, class: "required", autocomplete: "off" %>
</p>  
<p>
<%= label :starts_at, "When does it start?" %>
<%= label :duration, "How Long?", class: "duration" %><br/>
<%= f.text_field :chronic_starts_at, id: "datetime", class: "required starts_at", autocomplete: "off" %>
<%= f.text_field :duration, placeholder:"#hrs", class: "required duration", autocomplete: "off"  %>
</p>

    <p>
  <div><%= f.label :display_image %><br />
  <%= f.file_field :promo_img %></div>
    </p>

<div id="minmax" style="display: block; clear:both;">
  <u>
    <%= f.label :min_attendees, "Tipping point" %> <br/>
    <%= f.text_field :min, :class => 'input-mini', value: 1, autocomplete: "off" %>
  </u>
  <u>
    <%= f.label :max_attendees, "Full" %> <br/>
    <%= f.text_field :max, :class => 'input-mini', value: 50, autocomplete: "off" %>
  </u>
</div>

<div class="invitation_options" style="display: block; clear:both;">
  <u>
		<%= f.label "Share Idea with All Your Friends" %><br>
		<i class="icon-group questionMark"></i>
		<input checked="checked" id="invite_all_friends" name="invite_all_friends" type="checkbox" class="switch">    			
	</u>
  <u>
  	<%= f.label "Friends can share Idea with Friends" %><br>
		<i class="icon-bullhorn questionMark"></i>
		<%= f.check_box :guests_can_invite_friends, class: "switch", checked: "checked" %>
	</u>
</div>

<div id="addLinkp" style="display: none;">
	<%= label_tag "Link" %></br>
	http://<%= f.text_field :link, autocomplete: "off" %>
</div>

<div id="addmapp" style="display: none;">
  <%= label_tag "Map" %><br/>
  <%= f.text_field :address, id: "addresspicker_map", class: "ui-autocomplete-input", placeholder: "Map location..." %>
  <%= f.hidden_field :latitude, id: "lat" %>
  <%= f.hidden_field :longitude, id: "lng" %>
  <div id="map" class="new_idea_map"></div>
</div>


<div>
	<ul>
	  <li id="addLink" title="Add a Link"><i class="icon-link"></i></li>
	  	<% if false %>
	  <li id="addmap" title="Add a Map"><i class="icon-map-marker"></i></li>
			<% end %>
	</ul>
</div>
 
<span class="new_idea_button"><%= f.submit 'Post Idea', :class => 'btn btn-large btn-primary', method: :post %></span>

<% end %>
</div>