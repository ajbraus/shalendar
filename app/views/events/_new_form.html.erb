<div id="event_form">
 <%= form_for @event do |f| %>

  <p>
    <%= label :title, "Idea" %><br/>
    <%= f.text_area :title, :placeholder => "What's happening? Where? What should they bring?", :rows => 2 %>
  </p>  

  <p>
    <%= label :starts_at, "Starts at", name: "starts_at" %>   <%= label :duration, "Duration", name: "duration" %><br/>
    <%= f.text_field :chronic_starts_at, :class => "input-large", :placeholder => "7pm, tommorrow at 5pm . . ." %>
   <%= f.text_field :duration, :placeholder => "#hrs" %>
  </p>
<ul>
  <li><a href="#" id="addmap">Add Map</a></li>
  <li><a href="#" id="minmax">Min/Max</a></li>
  <li><a href="#" id="visibility">Visibility</a></li>
</ul>

<p>
  <h3>How Many People?</h3>
  <span>
    <%= f.label :min_attendees, "Min" %> <br/>
    <%= f.text_field :min, :class => 'input-mini', value: 1 %>
  </span>
  <span>
    <%= f.label :max_attendees, "Full" %> <br/>
    <%= f.text_field :max, :class => 'input-mini', value: 50 %>
  </span>
</p>

<p>
  <p><%= f.label :visibility, "Event Visibility (in Degrees of Separation)" %></p>
	<%= f.radio_button :visibility, 'friends_of_friends' %>
	<%= f.label :friends_of_friends, "Viewers of RSVPs" %>
	<%= f.radio_button :visibility, 'friends', :checked => true %>
	<%= f.label :friends, "Viewers" %>
	<%= f.radio_button :visibility, 'invite_only' %>
	<%= f.label :invite_only, 'Invite only' %>
</p>

 <div> 
   <%= f.submit 'New Event', :class => 'btn btn-large btn-primary' %>
 </div>
<% end %>
</div>