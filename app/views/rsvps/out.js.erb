<% if !@event.parent.present? || @event.one_time %>
	event = $('.event').withEventId(<%= @event.id %>)
	event.fadeOut();
	event.removeClass('event');
	$('#ideaContainer').masonry('reload');
	$('.idea_container').masonry('reload');
	$('#rsvpForm').first().html("<%= escape_javascript(render partial: 'events/rsvp_form', object: @event, as: :event) %>")
	$('#invites_count').decrement();
	time = $('.instance').withEventId(<%= @event.id %>)
	time.fadeOut();
<% else %>
	time = $('.instance').withEventId(<%= @event.id %>)
	time.fadeOut();
<% end %>