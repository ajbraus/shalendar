<% if @event.is_parent? || @event.one_time? %>
	event = $('.event').withEventId(<%= @event.id %>)
	event.rsvp_check("<%= escape_javascript(render partial: 'shalendar/rsvp_check', object: @event, as: :event) %>", '', <%= @event.min - @event.guest_count %>); 
	event.addClass('rsvpd');
<% else %>
	//TIME
	time = $('.one_time').withEventId(<%= @event.id %>)
	time.rsvp_check("<%= escape_javascript(render partial: 'shalendar/rsvp_check', object: @event, as: :event) %>", "<%= escape_javascript(render partial: 'events/rsvp_form', object: @event, as: :event) %>", <%= @event.min - @event.guest_count %>);
	
	//PARENT
	parent = $('.event').withEventId(<%= @event.parent.id %>)
	if (parent.hasClass('rsvpd')) {}
	else {
		parent.rsvp_check("<%= escape_javascript(render partial: 'shalendar/rsvp_check', object: @event.parent, as: :event) %>", "<%= escape_javascript(render partial: 'events/rsvp_form', object: @event, as: :event) %>", <%= @event.min - @event.guest_count %>);
		parent.addClass('rsvpd');
	}
<% end %>

$('#rsvpForm').html("<%= escape_javascript(render partial: 'events/rsvp_form', object: @event, as: :event) %>")

var afterRsvpLightbox = $('#shareAfterRsvp')
afterRsvpLightbox.html("<%= escape_javascript(render partial: 'shared/share_after_rsvp', object: @event, as: :event) %>")
afterRsvpLightbox.fadeIn();
$('#overlay').fadeIn();
$('#close').click(function(){
	afterRsvpLightbox.fadeOut();
	$('#overlay').fadeOut();
});
