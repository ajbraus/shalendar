<%if @event.starts_at.blank? %>
	idea = $('.event').withEventId(<%= @event.id %>)
	idea.rsvp_check("<%= escape_javascript(render partial: 'shalendar/rsvp_check', object: @event, as: :event) %>", "<%= escape_javascript(render partial: 'events/rsvp_form', object: @event, as: :event) %>");
	idea.addClass('rsvpd');

<% else %>
	time = $('.mini_event').withEventId(<%= @event.id %>)
	time.rsvp_check("<%= escape_javascript(render partial: 'shalendar/rsvp_check', object: @event, as: :event) %>", '' ); 
<% end %>

$('#rsvpForm').html("<%= escape_javascript(render partial: 'events/rsvp_form', object: @event, as: :event) %>")

var afterRsvpLightbox = $('#shareAfterRsvp')
afterRsvpLightbox.html("<%= escape_javascript(render partial: 'shared/share_after_rsvp', object: @event, as: :event) %>")
afterRsvpLightbox.fadeIn();
$('#overlay').fadeIn();
$('#close').click(function(){
	afterRsvpLightbox.fadeOut();
	$('#overlay').fadeOut();
});
